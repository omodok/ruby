<p id="notice"><%= notice %></p>

<h1>Rails簡易名簿</h1>

<table>
  <thead>
    <tr>
      <th>氏名</th>
      <th>住所</th>
      <th>電話</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meibos.each do |meibo| %>
      <tr>
        <td><%= meibo.shimei %></td>
        <td><%= meibo.jusyo %></td>
        <td><%= meibo.denwa %></td>
        <td><%= link_to '表示', meibo %></td>
        <td><%= link_to '編集', edit_meibo_path(meibo) %></td>
        <td><%= link_to '削除', meibo, method: :delete, data: { confirm: '本当にいいですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規名簿', new_meibo_path %>
