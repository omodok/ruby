<h2><%= t('.sign_up') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label "氏名" %><br />
    <%= f.text_field :shimei %>
  </div>

  <div class="field">
    <%= f.label "住所" %><br />
    <%= f.text_field :jusyo, size:30, value:"〒" %>
  </div>

  <div class="field">
    <%= f.label "電話" %><br />
    <%= f.text_field :denwa %>
  </div>

  <div class="field">
    <%= f.label "性別" %><br />
  	<%=f.radio_button :seibetu, "男性"%>男性
  	<%=f.radio_button :seibetu, "女性"%>女性
  </div>

  <div class="field">
    <%= f.label "年齢" %><br />
    <%= f.text_field :nenrei %>
  </div>
  <span class="small text-danger">◎すべて必須項目です。</span>
  <div class="actions">
    <%= f.submit t('.sign_up') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
